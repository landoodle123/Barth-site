generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  email     String     @unique
  name      String?
  password  String
  createdAt DateTime   @default(now())
  gameState GameState?
  sessionToken String? @unique
}

model GameState {
  userId                String   @id
  count                 BigInt   @default(0)
  amountGained          BigInt   @default(1)
  clickerCount          BigInt   @default(0)
  clickerCost           BigInt   @default(100)
  multiplierCost        BigInt   @default(150)
  clickerMultiplierCost BigInt   @default(1000)
  clickerGain           BigInt   @default(1)
  updatedAt             DateTime @updatedAt
  offlineClickerCost    BigInt   @default(500)
  offlineClickerCount   BigInt   @default(0)
  user                  User     @relation(fields: [userId], references: [id])
}
