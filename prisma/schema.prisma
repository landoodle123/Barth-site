generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  gameState GameState?
  createdAt DateTime @default(now())
}

model GameState {
  userId                String   @id
  count                 BigInt   @default(0) @db.BigInt
  amountGained          BigInt   @default(1) @db.BigInt
  clickerCount          BigInt   @default(0) @db.BigInt
  clickerCost           BigInt   @default(100) @db.BigInt
  multiplierCost        BigInt   @default(150) @db.BigInt
  clickerMultiplierCost BigInt   @default(1000) @db.BigInt
  clickerGain           BigInt   @default(1) @db.BigInt
  offlineClickerCount   BigInt   @default(0) @db.BigInt    // added for client offline clickers
  offlineClickerCost    BigInt   @default(500) @db.BigInt  // added for client offline costs
  updatedAt             DateTime @updatedAt
  user                  User     @relation(fields: [userId], references: [id])
}